<%- include partials/header %>
<%- include partials/profileNavbar %>

<h1>Welcome to the <%=city.name%> forum!</h1>
<img src="<%=city.img_url%>" alt="<%=city.name%>" style="width:304px;height:228px;">
<br>
<% if (posts.length === 0) { %>
  <h1>No posts yet! Be the first to post about this great city!</h1>
<% } else { %>
  <h3>Click on a link to see what people are saying:</h3>
  <% posts.forEach(function(post){ %>
    <h6 class="date-posted"><%=post.date_posted%></h6>
    <span><h3 class="city-post-list"><a href="/post/<%=post.id%>"><%=post.title%></a></h3></span>
    <br>
  <% }) %>
<% } %>
<br>
<form action="/city/<%=city.id%>/newpost" method="GET">
  <button type="submit" class="btn"><a href="/city/newpost"></a>Something to add? Click Here!</button>
</form>

<% include partials/footer %>
