<%- include partials/header %>
<%- include partials/profileNavbar %>
<br>
<form action="/city/<%=city.id%>/newpost" method="POST">
  <div class="form-group new-post-form">
    <h1>Please share your travel tips, inside information, or anything else about <%=city.name%>!</h1>
    <div class="form-group-row">
      <label for="title" class="col-2 col-form-label">Title</label>
      <div class="col-10">
        <input name="title" class="form-control" type="text">
      </div>
    </div>
    <div class="form-group-row">
      <label for="content" class="col-2 col-form-label">Content</label>
      <div class="col-10">
        <input name="content" class="form-control" type="text">
      </div>
    </div>
    <button type="submit" class="btn btn-primary" id="new-post-button">Submit</button>
  </div>
</form>
<%if (message) { %>
  <p class="message new-post-message">
    <%=message%>
  </p>
<% } %>

<% include partials/footer %>
